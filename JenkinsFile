pipeline {
  agent any
  stages {
    stage('shutdown and take the snapshot') {
      steps {
        sh 'chmod 755 ./awsec2-snapshot.sh'
        sh 'bash -x ./awsec2-snapshot.sh "${REGION}" "${INSTANCE_NAME}" "${ACCOUNT}" "${DESCRIPTION}" "${SHUTDOWN}"'
        sh 'git checkout ./awsec2-snapshot.sh'
}
}
}
}

